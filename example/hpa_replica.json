{
    "kind": "ReplicaSet",
    "apiversion": "v1",
    "metadata": {
        "name": "hpa-replica",
        "namespace": "example",
        "labels": {
            "app": "hpa"
        }
    },
    "spec": {
        "replicas": 3,
        "selector":{
            "matchLabels": {
                "app": "hpa"
            }
        },
        "template":{
            "metadata": {
                "name": "hpa-pod",
                "namespace": "test",
                "uid": "",
                "labels": {
                    "app" : "hpa"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "hpa-container",
                        "namespace": "test",
                        "image": "containerstack/cpustress:latest",
                        "imagepullpolicy": "IfNotPresent",
                        "resources":{
                            "cpu" : "4",
                            "memory" : "128MB"
                        },
                        "command" : [
                            "--cpu",
                            "4",
                            "--timeout",
                            "120",
                            "--metrics-brief"
                        ]
                    },
                    {
                        "name": "echo-container",
                        "namespace": "example",
                        "image": "xayahhh/echoserver:v1.4",
                        "imagepullpolicy": "IfNotPresent",
                        "resources":{
                            "cpu": "2",
                            "memory": "1024MB"
                        },
                        "exposedports": [
                            "80/tcp"
                        ],
                        "bindports": {
                            "80/tcp": "0.0.0.0:9095"
                        }
                    }
                ]
            }
        }
    }

}