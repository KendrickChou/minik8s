{
    "kind": "ReplicaSet",
    "apiversion": "v1",
    "metadata": {
        "name": "hpa-replica",
        "namespace": "example",
        "labels": {
            "app": "hpa"
        }
    },
    "spec": {
        "replicas": 3,
        "selector":{
            "matchLabels": {
                "app": "hpa"
            }
        },
        "template":{
            "metadata": {
                "name": "hpa-pod",
                "namespace": "test",
                "uid": "",
                "labels": {
                    "app" : "hpa"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "hpa-container-1",
                        "namespace": "test",
                        "image": "containerstack/cpustress:latest",
                        "imagepullpolicy": "IfNotPresent",
                        "resources":{
                            "cpu" : "4",
                            "memory" : "128MB"
                        },
                        "command" : [
                            "--cpu",
                            "4",
                            "--timeout",
                            "60",
                            "--metrics-brief"
                        ]
                    },
                    {
                        "name": "hpa-container-2",
                        "namespace": "example",
                        "image": "cilium/echoserver:latest",
                        "imagepullpolicy": "IfNotPresent"
                    }
                ]
            }
        }
    }

}