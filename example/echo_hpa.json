{
  "kind": "HorizontalPodAutoscaler",
  "apiversion": "v1",
  "metadata": {
    "name": "example-HPA",
    "namespace": "example"
  },
  "spec": {
    "scaleTargetRef": {
      "apiVersion": "v1",
      "kind": "ReplicaSet",
      "name": "example-replica"
    },
    "minReplicas": 5,
    "maxReplicas": 15,
    "metrics": [
      {
        "type": "Resource",
        "resource": {
          "name": "cpu",
          "target": {
            "type": "Utilization",
            "averageUtilization": 20
          }
        }
      },
      {
        "type": "Resource",
        "resource": {
          "name": "memory",
          "target": {
            "type": "Utilization",
            "averageUtilization": 40
          }
        }
      }
    ]
  }

}