{
  "kind": "HorizontalPodAutoscaler",
  "apiversion": "v1",
  "metadata": {
    "name": "myFirstHPA",
    "namespace": "default"
  },
  "spec": {
    "scaleTargetRef": {
      "apiVersion": "v1",
      "kind": "ReplicaSet",
      "name": "myFirstReplica"
    },
    "minReplicas": 1,
    "maxReplicas": 10,
    "metrics": [
      {
        "type": "Resource",
        "resource": {
          "name": "cpu",
          "target": {
            "type": "Utilization",
            "averageUtilization": 50
          }
        }
      },
      {
        "type": "Resource",
        "resource": {
          "name": "memory",
          "target": {
            "type": "Utilization",
            "averageUtilization": 30
          }
        }
      }
    ]
  }

}