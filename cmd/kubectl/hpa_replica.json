{
    "kind": "ReplicaSet",
    "apiversion": "v1",
    "metadata": {
        "name": "hpa-test-replica-1",
        "namespace": "test",
        "labels": {
            "app": "hpa"
        }
    },
    "spec": {
        "replicas": 3,
        "selector":{
            "matchLabels": {
                "app": "hpa"
            }
        },
        "template":{
            "metadata": {
                "name": "hpa-test-pod",
                "namespace": "test",
                "uid": "",
                "labels": {
                    "app" : "hpa"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "hpa-test-container-1",
                        "namespace": "test",
                        "image": "polinux/stress:latest",
                        "imagepullpolicy": "IfNotPresent",
                        "resources":{
                            "cpu" : "4",
                            "memory" : "128MB"
                        },
                        "command" : [
                            "/bin/sh",
                            "-c",
                            "stress --cpu 1 --io 1 --vm 1 --vm-bytes 128M --timeout 60s --verbose"
                        ]
                    }
                ]
            }
        }
    }

}